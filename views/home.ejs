<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head.ejs') %>
  <body>
    <%- include('./components/navbar.ejs') %>
    <div class="container">
      <h5>This is Home Page</h5>
      <% if(blogs.length){ %> <% blogs.forEach(blog => { %>
      <div class="blog-card">
        <h1><%= blog.title %></h1>
        <p><%= blog.intro %></p>
        <p><%= blog.body %></p>
      </div>
      <% }); %> <% }else{ %>
      <h3>No blogs found.</h3>
      <% } %>
    </div>
  </body>
</html>
