<h5>This is Home Page</h5>
<% if(blogs.length){ %> <% blogs.forEach(blog => { %>
<div class="blog-card">
  <a href="/blogs/<%= blog._id %>"><h1><%= blog.title %></h1></a>
  <p><%= blog.intro %></p>
  <p><%= blog.body %></p>
  <form action="/blogs/<%= blog._id %>/delete" method="POST">
    <button type="submit" class="blog-delete-btn">delete</button>
  </form>
</div>
<% }); %> <% }else{ %>
<h3>No blogs found.</h3>
<% } %>
